<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#555555"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/menu1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_menu1"
            android:layout_width="130dp"
            android:layout_height="45dp" 
            android:text="@string/sent_file"
            android:background="@drawable/line_color_button_sent_files"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_menu2"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:text="@string/received_file"
            android:background="@drawable/line_color_button_received_files"/>
    </LinearLayout>
</LinearLayout>